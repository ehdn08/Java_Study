*while(조건){
//반복한다
}
int i = 1; //증가되는 값을 저장하는 변수
		while(i <= 100) {//조건이 참(true)인 경우 반복한다.
			System.out.print(i + " ");
			i++; //증가 시켜주지 않으면 무한루프
		}
		for(int j = 1; j <= 100; j++) {// while문과 구성이 같다(초기값, 조건, 증가값)
			System.out.print(i + " ");
		}

*do while
//조건이 거짓이라도 최소 1번은 무조건 수행된다.
//명령을 수행 후 조건을 물어본다.
//조건이 마지막이기 때문에 (;)로 끝난다.
int k = 1;
		do {
			System.out.print(k + " ");
			k++;
		}while(k <= 100);//do~while문의 끝은 반드시 세미콜론(;)으로 마무리
